@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h3>Aktif Tur Rotalarımız</h3>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">

                <img src="@item.Image" class="card-img-top" alt="@item.City" style="height: 200px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.City</h5>
                    <p class="card-text flex-grow-1">
                        <strong>Süre:</strong> @item.DayNight<br>
                        <strong>Kapasite:</strong> @item.Capacity Kişi
                    </p>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="fs-5 fw-bold text-primary">@item.Price $</span>
                        <a href="@Url.Action("DestinationDetails", "Destination", new { id = item.DestinationId })"
                           class="btn btn-primary btn-sm">Detaylar</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>