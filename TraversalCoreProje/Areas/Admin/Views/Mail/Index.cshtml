@model TraversalCoreProje.Models.MailRequest
@{
    ViewData["Title"] = "Mail Gönder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary py-3">
                    <h5 class="card-title text-white mb-0">
                        <i class="fas fa-paper-plane me-2"></i> Yeni Mail Gönder
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold text-secondary">
                                <i class="fas fa-envelope me-1"></i> Alıcı Mail Adresi
                            </label>
                            <input type="email" asp-for="ReceiverMail" class="form-control form-control-lg border-2" placeholder="Örn: ornek@mail.com" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-secondary">
                                <i class="fas fa-heading me-1"></i> Konu
                            </label>
                            <input type="text" asp-for="Subject" class="form-control border-2" placeholder="Mail konusunu buraya yazın..." required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold text-secondary">
                                <i class="fas fa-pen me-1"></i> İçerik
                            </label>
                            <textarea asp-for="Body" class="form-control border-2" rows="6" placeholder="Mesajınızı buraya yazın..."></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-4">
                            <button type="reset" class="btn btn-outline-secondary px-4 me-md-2">
                                <i class="fas fa-undo me-1"></i> Formu Temizle
                            </button>
                            <button type="submit" class="btn btn-primary px-5 fw-bold shadow-sm">
                                <i class="fas fa-paper-plane me-1"></i> Maili Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <small class="text-muted">Lütfen göndermeden önce tüm alanları kontrol edin.</small>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    /* Daha yumuşak odaklanma efekti */
    .form-control:focus {
        border-color: #5d59d4;
        box-shadow: 0 0 0 0.2rem rgba(93, 89, 212, 0.25);
    }
    .card {
        border-radius: 12px;
    }
    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }
</style>