@model EntityLayer.Concrete.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Yeni Rota Oluşturma Sayfası</h3>
    </div>
    <div class="card-body">
        <form method="post">

            <div class="row">

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="City" class="form-label">Şehir</label>
                        <input type="text" asp-for="City" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="DayNight" class="form-label">Gün-Gece</label>
                        <input type="text" asp-for="DayNight" class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label">Fiyat</label>
                            <input type="text" asp-for="Price" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Capacity" class="form-label">Kapasite</label>
                            <input type="text" asp-for="Capacity" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Details1" class="form-label">Detay 1</label>
                        <textarea cols="30" rows="5" class="form-control" asp-for="Details1"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Details2" class="form-label">Detay 2</label>
                        <textarea cols="30" rows="5" class="form-control" asp-for="Details2"></textarea>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Image" class="form-label">Ana Görsel (URL)</label>
                        <input type="text" asp-for="Image" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CoverImage" class="form-label">Kapak Görseli (URL)</label>
                        <input type="text" asp-for="CoverImage" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Image2" class="form-label">Görsel 2 (URL)</label>
                        <input type="text" asp-for="Image2" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Image3" class="form-label">Görsel 3 (URL)</label>
                        <input type="text" asp-for="Image3" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Açıklama</label>
                        <textarea asp-for="Description" rows="6" class="form-control"></textarea>
                    </div>
                </div>

            </div> <hr />

            <div class="text-end">
                <button class="btn btn-primary">Oluştur</button>
            </div>

        </form>
    </div>
</div>