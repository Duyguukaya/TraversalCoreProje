@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Tur Rotaları</h3>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">

                <img src="@item.Image" class="card-img-top" alt="@item.City" style="height: 200px; object-fit: cover;">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.City</h5>
                    <p class="card-text flex-grow-1">
                        <strong>Süre:</strong> @item.DayNight<br>
                        <strong>Kapasite:</strong> @item.Capacity Kişi
                    </p>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <span class="fs-5 fw-bold text-primary">@item.Price $</span>
                        <a href="/Destination/DestinationDetails/@item.DestinationId"
                           class="btn btn-outline-success btn-sm">Sitede Gör</a>
                    </div>
                    <div class="mt-2 d-flex justify-content-end gap-2">

                        <a href="/Admin/Destination/UpdateDestination/@item.DestinationId"
                           class="btn btn-outline-warning btn-sm"
                           title="Güncelle">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a href="/Admin/Destination/DeleteDestination/@item.DestinationId"
                           class="btn btn-outline-danger btn-sm"
                           title="Sil">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="d-flex justify-content-center">
        <a href="/Admin/Destination/AddDestination"
           class="btn btn-primary"
           title="Ekle">
            <i class="bi bi-plus"></i> Yeni Rota Ekle
        </a>
    </div>
</div>


