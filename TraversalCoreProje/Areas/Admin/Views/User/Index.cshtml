@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}

<h3>Kullanıcı Listesi</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Email Adresi</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>
            <td>@count</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>
                <a href="/Admin/User/CommentUser/@item.Id" class="btn btn-outline-secondary">Yorumlar</a>
            </td>
            <td>
                <a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-outline-success">Tur Geçmişi</a>
            </td>
            <td>
                <a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a>
                <a href="/Admin/User/EditUser/@item.Id" class="btn btn-outline-info">Düzenle</a>
            </td>
        </tr>
    }
</table>

<a href="/Login/SignUp" class="btn btn-outline-primary">Yeni Kullanıcı Ekle</a>

